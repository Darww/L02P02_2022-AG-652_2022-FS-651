@model List<Libro>

<h2>Lista de Libros</h2>
<a href="@Url.Action("Crear")" class="btn btn-primary">Agregar Nuevo</a>

<table class="table">
    <tr>
        <th>Nombre</th>
        <th>Autor</th>
        <th>Categoría</th>
        <th>Precio</th>
        <th>Estado</th>
        <th>Acciones</th>
    </tr>
    @foreach (var libro in Model)
    {
        <tr>
            <td>@libro.Nombre</td>
            <td>@libro.Autor.Nombre</td>
            <td>@libro.Categoria.Nombre</td>
            <td>@libro.Precio</td>
            <td>@(libro.Estado == 'A' ? "Activo" : "Inactivo")</td>
            <td>
                <a href="@Url.Action("Editar", new { id = libro.Id })" class="btn btn-warning">Editar</a>
                <a href="@Url.Action("Eliminar", new { id = libro.Id })" class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
    }
</table>
